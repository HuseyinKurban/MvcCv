@using MvcCv.Models.Entity
@model List<TblSosyalMedya>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Sosyal Medya Listem</h3>
                            </div>
                            <div class="card-body">

                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th style="width: 10px">ID</th>
                                            <th>Ad</th>
                                            <th>Icon</th>
                                            <th>Link</th>
                                            <th>Durum</th>
                                            <th>Düzenle</th>
                                            <th>Sil</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var x in Model)
                                        {


                                            <tr>
                                                <td>@x.ID</td>
                                                <td>@x.Ad</td>
                                                <td>@x.Icon</td>
                                                <td>@x.Link</td>
                                                <td style="width:40px;">@(x.Durum ?? true  ? "Aktif" : "Pasif")</td>
                                                <td style="width:150px;">
                                                    <a class="btn btn-info btn-sm" href="/SosyalMedya/SosyalMedyaGetir/@x.ID">
                                                        <i class="fas fa-pencil-alt"></i>Düzenle
                                                    </a>
                                                </td>

                                                <td style="width:100px;">
                                                    <a class="btn btn-danger btn-sm" href="/SosyalMedya/SosyalMedyaSil/@x.ID">
                                                        <i class="fas fa-trash"></i>Sil
                                                    </a>
                                                </td>
                                            </tr>
                                        }

                                    </tbody>

                                </table>
                                <br />
                                <button class="btn btn-info" data-toggle="modal" data-target="#Modal1">Yeni Sosyal Medya Hesabı Ekle</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <div class="modal" id="Modal1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h3 class="modal-title">Sosyal Medya Hesabı Ekleme Paneli</h3>
                    </div>
                    <form method="post" action="/SosyalMedya/SosyalMedyaEkle">
                        <div class="modal-body">
                            <label>Sosyal Medya İsmi</label>
                            <input type="text" class="form-control" name="Ad" />
                            <br />
                            <label>Sosyal Medya Icon</label>
                            <input type="text" class="form-control" name="Icon" />
                            <br />
                            <label>Sosyal Medya Linki</label>
                            <input type="text" class="form-control" name="Link" />
                            <br />
                            <button class="btn btn-info">Kaydet</button>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</body>
</html>

