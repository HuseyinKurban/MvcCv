@using MvcCv.Models.Entity
@model List<TblHobilerim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Hobi Bilgilerim</h3>
                            </div>
                            <div class="card-body">

                                <form method="post">
                                    @foreach (var x in Model)
                                    {
                                        <label>1. Açıklama</label>
                                        <textarea rows="10" class="form-control" style="max-height:250px; min-height:250px;" name="Aciklama1">@x.Aciklama1</textarea>
                                        <br />
                                        <label>2. Açıklama</label>
<textarea rows="10" class="form-control" style="max-height:250px; min-height:250px;" name="Aciklama2">@x.Aciklama2</textarea>

                                    }

                                    <br />
                                    <button class="btn btn-success">Güncelle</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</body>
</html>