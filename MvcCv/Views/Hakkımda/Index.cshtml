@using MvcCv.Models.Entity
@model List<TblHakkimda>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">

        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Hakkımda</h3>
                            </div>
                            <div class="card-body">

                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th style="width: 10px">ID</th>
                                            <th>Ad</th>
                                            <th>Soyad</th>
                                            <th>Adres</th>
                                            <th>Telefon</th>
                                            <th>Mail</th>
                                            <th>Açıklama</th>
                                            <th>Düzenle</th>
                                            <th>Sil</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var x in Model)
                                        {


                                            <tr>
                                                <td>@x.ID</td>
                                                <td>@x.Ad</td>
                                                <td>@x.Soyad</td>
                                                <td>@x.Adres</td>
                                                <td>@x.Telefon</td>
                                                <td>@x.Mail</td>
                                                <td>@x.Aciklama.Substring(0, 30)...</td>
                                                <td style="width:150px;">
                                                    <a class="btn btn-info btn-sm" href="#D">
                                                        <i class="fas fa-pencil-alt"></i>Düzenle
                                                    </a>
                                                </td>

                                                <td style="width:100px;">
                                                    <a class="btn btn-danger btn-sm" href="#">
                                                        <i class="fas fa-trash"></i>Sil
                                                    </a>
                                                </td>
                                            </tr>
                                        }

                                    </tbody>

                                </table>
                                <br />
                                <a href="#" class="btn btn-info">Yeni Hakkımda Bilgisi Ekle</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</body>
</html>

