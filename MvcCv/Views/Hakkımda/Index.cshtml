@using MvcCv.Models.Entity
@model List<TblHakkimda>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Hakkımda Bilgilerim</h3>
                            </div>
                            <div class="card-body">

                                <form method="post">
                                    @foreach (var x in Model)
                                    {
                                        <label>Ad</label>
                                        <input type="text" class="form-control" name="Ad" value="@x.Ad" />
                                        <br />
                                        <label>Soyad</label>
                                        <input type="text" class="form-control" name="Soyad" value="@x.Soyad" />
                                        <br />
                                        <label>Adres</label>
                                        <input type="text" class="form-control" name="Adres" value="@x.Adres" />
                                        <br />
                                        <label>Telefon</label>
                                        <input type="text" class="form-control" name="Telefon" value="@x.Telefon" />
                                        <br />
                                        <label>Mail</label>
                                        <input type="text" class="form-control" name="Mail" value="@x.Mail" />
                                        <br />
                                        
                                        <img src="@x.Resim" alt="Resim" class="img-fluid" style="margin-bottom:20px;" />
                                        <br />
                                        <label>Resim Url</label>
                                        <input type="text" class="form-control" name="Mail" value="@x.Resim" />
                                        <br />
                                        <label>Açıklama</label>
                                        <textarea rows="5" class="form-control" style="max-height:150px; min-height:150px;" name="Aciklama">@x.Aciklama</textarea>

                                    }

                                    <br />
                                    <button class="btn btn-success">Güncelle</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</body>
</html>
