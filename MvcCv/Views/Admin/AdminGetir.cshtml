@model MvcCv.Models.Entity.TblAdmin
@{
    ViewBag.Title = "AdminGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Kullanıcı Güncelleme</h3>
                            </div>
                            <div class="card-body">

                                <form method="post">
                                    <label>ID</label>
                                    @Html.TextBoxFor(x => x.ID, new { @class = "form-control", @readonly = "True" })
                                    <label>Kullanıcı Adı</label>
                                    @Html.TextBoxFor(x => x.KullaniciAdi, new { @class = "form-control" })
                                    <br />
                                    <label>Şifre</label>
                                    @Html.TextBoxFor(x => x.Sifre, new { @class = "form-control" })
                                    <br />
                                    
                                    <button class="btn btn-info">Güncelle</button>

                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</body>
</html>

