@model MvcCv.Models.Entity.TblDeneyimlerim
@{
    ViewBag.Title = "Deneyim Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Deneyim Ekleme Sayfası</h3>
                            </div>
                            <div class="card-body">
                                <form method="post">
                                    <div class="form-group">
                                        <label>Başlık</label>
                                        @Html.TextBoxFor(x => x.Baslik, new { @class = "form-control" })
                                    </div>

                                    <div class="form-group">
                                        <label>Alt Başlık</label>
                                        @Html.TextBoxFor(x => x.AltBaslik, new { @class = "form-control" })
                                    </div>

                                    <div class="form-group">
                                        <label>Tarih</label>
                                        @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control" })
                                    </div>

                                    <div class="form-group">
                                        <label>Açıklama</label>
                                        @Html.TextAreaFor(x => x.Aciklama, 5, 0, new { @class = "form-control" })
                                    </div>

                                    <div class="form-group text-end">
                                        <button type="submit" class="btn btn-info">Deneyim Ekle</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</body>
</html>
