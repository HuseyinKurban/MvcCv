@using MvcCv.Models.Entity
@model List<Tbliletisim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">İletişim Listem</h3>
                        </div>
                        <div class="card-body">
                            <div class="tab-pane" id="timeline">
                                <div class="timeline timeline-inverse">
                                    @foreach (var x in Model)
                                    {


                                    <div class="time-label">
                                        <span class="bg-info">
                                            @x.Tarih.ToShortDateString()
                                        </span>
                                    </div>
                                    <div>
                                        <i class="fas fa-comments bg-warning"></i>
                                        <div class="timeline-item">
                                
                                            <h3 class="timeline-header"><a style="color:blue">@x.AdSoyad</a> @x.Mail</h3>
                                            <div class="timeline-body" style="font-size:20px; color:red">
                                                @x.Konu
                                            </div>
                                            <div class="timeline-body">
                                               @x.Mesaj
                                            </div>
                                        
                                        </div>
                                    </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                </div>
            </div>
    </section>
</body>
</html>