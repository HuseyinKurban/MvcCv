@using MvcCv.Models.Entity
@model List<TblSertifikalarim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{string btnColor = ""; }
@{string spanColor = ""; }
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">

                <!-- /.col -->
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Sertifika Listem</h3>
                        </div><!-- /.card-header -->
                        <div class="card-body">
                            <div class="tab-pane" id="timeline">
                                <!-- The timeline -->
                                <div class="timeline timeline-inverse">
                                    @foreach (var x in Model)
                                    {
                                        if (x.ID %2== 0)
                                        {
                                            spanColor = "bg-success";
                                            btnColor= "btn btn-success";

                                        }
                                        else
                                        {
                                            spanColor = "bg-primary";
                                            btnColor = "btn btn-primary";
                                        }

                                        <!-- timeline time label -->
                                        <div class="time-label">

                                            <span class="@spanColor" >
                                                @x.Tarih
                                            </span>
                                            <a href="/Sertifika/SertifikaGetir/@x.ID" class="@btnColor" style="height:34px; width:38px; ">
                                                <i class="nav-icon fas fa-arrow-right"></i>

                                            </a>

                                        </div>
                                        <!-- /.timeline-label -->
                                        <!-- timeline item -->
                                        <div>

                                            <div class="timeline-item">

                                                <div class="timeline-body">

                                                    @x.Aciklama

                                                </div>

                                            </div>
                                        </div>
                                    }
                                </div>
                                <a href="/Sertifika/YeniSertifika" class="btn btn-info">Yeni Sertifika Ekle</a>
                            </div>
                        </div>
                        <!-- /.tab-content -->
                    </div><!-- /.card-body -->
                </div>

            </div>

        </div>

    </section>
</body>
</html>

