@model MvcCv.Models.Entity.TblEgitimlerim
@{
    ViewBag.Title = "EgitimGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Deneyim Güncelleme</h3>
                            </div>
                            <div class="card-body">

                                <form method="post">
                                    <label>ID</label>
                                    @Html.TextBoxFor(x => x.ID, new { @class = "form-control", @readonly = "True" })
                                    <label>Başlık</label>
                                    @Html.TextBoxFor(x => x.Baslik, new { @class = "form-control" })
                                    <br />
                                    <label>Alt Başlık1</label>
                                    @Html.TextBoxFor(x => x.AltBaslik1, new { @class = "form-control" })
                                    <br />
                                    <label>Alt Başlık2</label>
                                    @Html.TextBoxFor(x => x.AltBaslik2, new { @class = "form-control" })
                                    <br />
                                    <label>Genel Not Ortalaması (GNO)</label>
                                    @Html.TextBoxFor(x => x.GNO, new { @class = "form-control" })
                                    <br />
                                    <label>Tarih</label>
                                    @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control" })
                                    <br />
                                    <button class="btn btn-info">Güncelle</button>

                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</body>
</html>
