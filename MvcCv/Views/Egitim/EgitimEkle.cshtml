@model MvcCv.Models.Entity.TblEgitimlerim
@{
    ViewBag.Title = "EgitimEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Eğitim Ekleme Sayfası</h3>
                            </div>
                            <div class="card-body">
                                <form method="post">
                                    <div class="form-group">
                                        <label>Başlık</label>
                                        @Html.TextBoxFor(x => x.Baslik, new { @class = "form-control",  })
                                        @Html.ValidationMessageFor(x=>x.Baslik,"",new {@style="color:red"})
                                    </div>

                                    <div class="form-group">
                                        <label>Alt Başlık1</label>
                                        @Html.TextBoxFor(x => x.AltBaslik1, new { @class = "form-control", @required = "required" })
                                    </div>
                                    <div class="form-group">
                                        <label>Alt Başlık2</label>
                                        @Html.TextBoxFor(x => x.AltBaslik2, new { @class = "form-control", @required = "required", @maxlength = "100" })
                                    </div>

                                    <div class="form-group">
                                        <label>Genel Not Ortalaması(GNO)</label>
                                        @Html.TextBoxFor(x => x.GNO, new { @class = "form-control", @required = "required" })
                                        @Html.ValidationMessageFor(x => x.GNO, "", new { @style = "color:blue" })

                                    </div>

                                    <div class="form-group">
                                        <label>Tarih</label>
                                        @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control", @required = "required" })
                                    </div>

                                    <div class="form-group text-end">
                                        <button type="submit" class="btn btn-info">Eğitim Ekle</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</body>
</html>
